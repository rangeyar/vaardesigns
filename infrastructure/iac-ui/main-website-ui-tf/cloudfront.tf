  default_cache_behavior {
    allowed_methods  = ["GET", "HEAD"]
    cached_methods   = ["GET", "HEAD"]
    target_origin_id = "S3-${var.www_domain_name}"

    forwarded_values {
      query_string = false

      cookies {
        forward = "none"
      }
